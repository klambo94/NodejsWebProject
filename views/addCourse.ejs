</head>
<body>
	<h1>Add A Course</h1> 
	<a href="/logout" class="btn btn-default btn sm">Logout</a>
	<% if (errors) {%>
		<% for(i =0; i < errors.length ; i++) { %>
			<li><%= errors[i].msg %></li>		
		<% }%>	
	<% }%>
	<form action="/courses" method="POST">
		<input type="text" placeholder="Course Name" name="courseName">
		<input type="text" placeholder="Course Number" name="courseNumber">
		<input type="text" placeholder="Course Professor" name="courseProfessor">
		<input type="text" placeholder="Course Description" name="courseDescription">
		<input type="text" placeholder="Course Date" name="courseDate">
		<input type="text" placeholder="Course Time" name="courseTime">
		<button type="submit">Add Course</button>
	</form>
	<a href="/courses">View Courses</a>
</body>
</html>
